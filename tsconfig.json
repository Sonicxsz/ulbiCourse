{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "*":["./src/*"],
            "react": [ "./node_modules/@types/react" ]
        },
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        
      },
      "ts-node": {
